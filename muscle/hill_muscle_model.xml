<mujoco model="hill_muscle_test">
    <compiler angle="degree" coordinate="local"/>
    <option gravity="0 0 -9.81"/>

    <worldbody>
        <body name="upper_arm" pos="0 0 0">
            <geom type="capsule" fromto="0 0 0 0 0 0.3" size="0.02" rgba="0.8 0.8 0.8 1"/>
            <joint name="elbow" type="hinge" axis="0 1 0" pos="0 0 0.3" range="-150 0"/>
            
            <!-- Muscle visualization points -->
            <site name="bicep_origin" pos="0 0 0.1" size="0.005" rgba="1 0 0 1"/>
            <site name="bicep_insertion" pos="0 0 0.2" size="0.005" rgba="1 0 0 1"/>
            <site name="tricep_origin" pos="0 0 0.1" size="0.005" rgba="0 0 1 1"/>
            <site name="tricep_insertion" pos="0 0 0.2" size="0.005" rgba="0 0 1 1"/>
            
            <!-- Wrapping objects for muscle paths -->
            <geom name="bicep_wrap" type="sphere" pos="0 0 0.15" size="0.03" rgba="1 0 0 0.5"/>
            <geom name="tricep_wrap" type="sphere" pos="0 0 0.15" size="0.03" rgba="0 0 1 0.5"/>
            
            <!-- Sites for muscle paths -->
            <site name="bicep_wrap_site" pos="0 0 0.15" size="0.003"/>
            <site name="tricep_wrap_site" pos="0 0 0.15" size="0.003"/>

            <body name="forearm" pos="0 0 0.3">
                <geom type="capsule" fromto="0 0 0 0 0 0.3" size="0.02" rgba="0.8 0.8 0.8 1"/>
            </body>
        </body>
    </worldbody>

    <tendon>
        <!-- Bicep muscle -->
        <spatial name="bicep" width="0.01" rgba="1 0 0 0.8">
            <site site="bicep_origin"/>
            <site site="bicep_wrap_site"/>
            <site site="bicep_insertion"/>
        </spatial>
        <!-- Tricep muscle -->
        <spatial name="tricep" width="0.01" rgba="0 0 1 0.8">
            <site site="tricep_origin"/>
            <site site="tricep_wrap_site"/>
            <site site="tricep_insertion"/>
        </spatial>
    </tendon>

    <actuator>
        <!-- Hill-type muscle actuators -->
        <motor name="bicep_motor" joint="elbow" gear="1" ctrlrange="0 1"/>
        <motor name="tricep_motor" joint="elbow" gear="-1" ctrlrange="0 1"/>
    </actuator>

    <visual>
        <global offwidth="1200" offheight="900"/>
        <quality shadowsize="2048"/>
    </visual>
</mujoco> 