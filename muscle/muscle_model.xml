<mujoco model="muscle_test">
    <compiler angle="degree" coordinate="local"/>
    <option gravity="0 0 -9.81"/>

    <worldbody>
        <body name="upper_arm" pos="0 0 0">
            <geom type="capsule" fromto="0 0 0 0 0 0.3" size="0.02" rgba="0.8 0.8 0.8 1"/>
            <joint name="elbow" type="hinge" axis="0 1 0" pos="0 0 0.3" range="-150 0"/>
            
            <!-- Muscle visualization points -->
            <site name="muscle_origin" pos="0 0 0.1" size="0.005" rgba="1 0 0 1"/>
            <site name="muscle_insertion" pos="0 0 0.2" size="0.005" rgba="1 0 0 1"/>
            
            <!-- Wrapping object (just visual/physical) -->
            <geom name="wrap_geom" type="sphere" pos="0 0 0.15" size="0.03" rgba="1 0 0 0.5"/>
            <!-- Site at same location, used for tendon -->
            <site name="wrap_site" pos="0 0 0.15" size="0.003"/>

            <body name="forearm" pos="0 0 0.3">
                <geom type="capsule" fromto="0 0 0 0 0 0.3" size="0.02" rgba="0.8 0.8 0.8 1"/>
                <site name="origin" pos="0 0 0.05" size="0.005"/>
                <site name="insertion" pos="0 0 0.25" size="0.005"/>
            </body>
        </body>
    </worldbody>

    <tendon>
        <spatial name="bicep" width="0.01" rgba="1 0 0 0.8">
            <site site="muscle_origin"/>
            <site site="wrap_site"/>
            <site site="muscle_insertion"/>
        </spatial>
    </tendon>

    <actuator>
        <motor name="bicep_motor" joint="elbow" gear="1" ctrlrange="-1 1"/>
    </actuator>

    <visual>
        <global offwidth="1200" offheight="900"/>
        <quality shadowsize="2048"/>
    </visual>
</mujoco>
